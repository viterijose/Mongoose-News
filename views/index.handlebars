<h1>Articles</h1>

<div class="container-articles">
  {{#each data}}


  <form class="create-form">

    <div class="form-group">
        <a class="articles" href={{articleLink}} data-head={{id}}>{{headline}}</a>
      <div class="d-flex justify-content-start">
        <img src={{imgLink}} data-img={{id}}>
      </div>
      <div class="d-flex justify-content-start">

        <p data-sum={{id}}>{{summary}}</p>
      </div>

    </div>

    <button type="submit" data-id={{id}} class="btn btn-success">SAVE ARTICLE</button>
  </form>
  {{/each}}
</div>